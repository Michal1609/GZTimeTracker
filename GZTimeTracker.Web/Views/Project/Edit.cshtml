@model GZTimeTracker.Web.Models.ViewModels.ProjectEditViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["View.Project.Edit.Edit"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Project.Name" class="control-label"></label>
                <input asp-for="@Model.Project.Name" class="form-control" />
                <span asp-validation-for="@Model.Project.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Project.Code" class="control-label"></label>
                <input asp-for="@Model.Project.Code" class="form-control" />
                <span asp-validation-for="@Model.Project.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Project.Description" class="control-label"></label>
                <input asp-for="@Model.Project.Description" class="form-control" />
                <span asp-validation-for="@Model.Project.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Project.StarTimeUTC" class="control-label"></label>
                <input asp-for="@Model.Project.StarTimeUTC" class="form-control" />
                <span asp-validation-for="@Model.Project.StarTimeUTC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Project.EndTimeUTC" class="control-label"></label>
                <input asp-for="@Model.Project.EndTimeUTC" class="form-control" />
                <span asp-validation-for="@Model.Project.EndTimeUTC" class="text-danger"></span>
            </div>
            <h3>@Localizer["Project.View.Tasks"]</h3>

            @if (@Model.Project.Tasks != null)
            {
                for (int i = 0; i < Model.Project.Tasks.Count; i++)
                {
                    <table>
                        <tr>
                            <td>@Html.HiddenFor(x => Model.Project.Tasks[i].Id)</td>
                            <td>@Html.TextBoxFor(x => Model.Project.Tasks[i].Name, new { @class = "form-control" })</td>
                            <td>
                                <a asp-action="DeleteTask"
                                   asp-route-id="@Model.Project.Tasks[i].Id"
                                   asp-route-projectId="@Model.Project.Id">DELETE</a>
                            </td>
                        </tr>
                    </table>

                }
            }

        <select name="Project.ClientId" class="form-control">
            @{
                if (Model.Project.ClientId != 0)
                {
                    <option value="@Model.Project.ClientId">@Model.Clients.FirstOrDefault(x => x.Id == Model.Project.ClientId).Name</option>
                }
                
                var clients = Model.Clients.Where(x => x.Id != Model.Project.ClientId).ToList();
                for (int i = 0; i < clients.Count; i++)
                {
                        <option value="@clients[i].Id">@clients[i].Name</option>
                }
            }
        </select>

            <div class="form-group">
                <input type="submit" value=@Localizer["View.Project.Edit.Save"] class="btn btn-primary" />
            </div>
        </form>

        
        <form asp-action="CreateTask">
            <div class="form-group">
                @Html.Hidden("projectId", Model.Project.Id)
                @Html.Label(Localizer["Project.View.Edit.CreaetTask"].Value)
                @Html.TextBox("name");
            </div>
            <div class="form-group">
                <input type="submit" value=@Localizer["View.Project.Edit.Save"] class="btn btn-primary" />
            </div>
        </form>
</div>
</div>

<div>
    <a asp-action="Index">@Localizer["View.Project.Edit.BackToList"]</a>
</div>

